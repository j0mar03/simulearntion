{
  "name": "gokgok-multiplayer",
  "version": "1.0.0",
  "description": "SimuLearntion - Multiplayer Web-based Educational Game",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "migrate": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "seed": "node scripts/migrate-profiles.js",
    "create-admin": "node scripts/create-admin.js",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:dev": "docker compose -f docker-compose.dev.yml up",
    "docker:build": "docker compose build --no-cache",
    "docker:restart": "docker compose restart app"
  },
  "keywords": ["education", "physics", "multiplayer", "game", "gamification"],
  "author": "Group 3 - STEM Capstone",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "@prisma/client": "^5.9.1",
    "dotenv": "^16.4.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.12.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "prisma": "^5.9.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
